# Etapa de construcciÃ³n
FROM eclipse-temurin:21-jdk-alpine AS build

WORKDIR /workspace

COPY pom.xml .
COPY mvnw .
COPY .mvn .mvn
COPY src ./src

# ðŸ‘‡ Dar permisos de ejecuciÃ³n a mvnw
RUN chmod +x mvnw

# ðŸ‘‡ Compilar el proyecto
RUN ./mvnw clean package -DskipTests

# Etapa de ejecuciÃ³n
FROM eclipse-temurin:21-jdk-alpine

WORKDIR /app

COPY --from=build /workspace/target/agenda-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8080

CMD ["java", "-jar", "app.jar"]
